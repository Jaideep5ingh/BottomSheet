<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="avneet.bottomsheet.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="Living Room"
        android:textColor="#a6b2ba"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/on"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="#933ec5"
        android:src="@drawable/smoking"
        app:borderWidth="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="#933ec5"
        android:src="@drawable/motion"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="64dp"
        android:layout_height="72dp"
        android:layout_marginLeft="64dp"

        android:layout_marginTop="51dp"
        android:backgroundTint="#933ec5"
        android:src="@drawable/bulb1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="64dp"
        android:id="@+id/floatingActionButton4"
        android:layout_height="72dp"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="51dp"
        android:backgroundTint="#933ec5"
        android:src="@drawable/fan1"
        app:layout_constraintLeft_toRightOf="@+id/floatingActionButton2"

        app:layout_constraintTop_toBottomOf="@+id/floatingActionButton3" />
</android.support.constraint.ConstraintLayout>
